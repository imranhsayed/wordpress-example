{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "one-novanta/section-heading",
	"version": "0.1.0",
	"title": "Section: Header",
	"category": "one-novanta",
	"icon": "welcome-widgets-menus",
	"description": "Gather blocks in a layout container.",
	"parent": [ "one-novanta/section" ],
	"example": {
		"innerBlocks": [
			{
				"name": "core/heading",
				"attributes": {
					"content": "Heading"
				}
			},
			{
				"name": "core/paragraph",
				"attributes": {
					"content": "Description"
				}
			}
		]
	},
	"keywords": [ "section", "container", "layout", "novanta" ],
	"supports": {
		"align": [ "wide" ],
		"spacing": {
			"margin": true
		},
		"typography": {
			"textAlign": true
		}
	},
	"attributes": {
		"align": {
			"type": "string",
			"default": "wide"
		},
		"templateLock": {
			"type": [ "string", "boolean" ],
			"enum": [ "all", "insert", "contentOnly", false ]
		},
		"style": {
			"type": "object",
			"default": {
				"spacing": {
					"margin": {
						"bottom": "var:preset|spacing|40"
					}
				}
			}
		}
	},
	"usesContext": [
		"showTitle",
		"showDescription",
		"showButtons",
		"headingLayout",
		"template"
	],
	"textdomain": "one-novanta-theme",
	"editorScript": "file:./index.js",
	"style": "file:./style-index.css"
}
