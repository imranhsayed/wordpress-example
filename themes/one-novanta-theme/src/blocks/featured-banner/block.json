{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "one-novanta/featured-banner",
	"version": "0.1.0",
	"title": "Featured Banner",
	"category": "one-novanta",
	"icon": "editor-table",
	"description": "A custom banner block.",
	"example": {
		"attributes": {
			"preHeading": "Pre Heading",
			"heading": "Main Heading",
			"description": "This is a description for the feature banner.",
			"hasDescription": true,
			"hasButtons": true
		}
	},
	"attributes" : {
		"preHeading": {
			"type": "string",
			"default": ""
		},
		"heading": {
			"type": "string",
			"default": ""
		},
		"hasDescription": {
			"type": "boolean",
			"default": true
		},
		"description": {
			"type": "string",
			"default": ""
		},
		"imageID": {
			"type": "integer",
			"default": 0
		},
		"imageURL": {
			"type": "string",
			"default": ""
		},
		"hasButtons": {
			"type": "boolean",
			"default": true
		},
		"contentWidth":  {
			"type": "string",
			"default": "wide"
		},
		"height": {
			"type": "string",
			"default": "small"
		},
		"verticalAlign": {
			"type": "string",
			"default": "middle"
		},
		"isDynamic": {
			"type": "boolean",
			"default": false
		},
		"taxonomy": {
			"type": "string",
			"default": ""
		},
		"overlay": {
			"type": "string",
			"default": "dark"
		}
	},
	"textdomain": "one-novanta-theme",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php"
}
