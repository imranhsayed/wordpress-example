{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "one-novanta/featured-content",
	"version": "0.1.0",
	"title": "Featured Content",
	"category": "one-novanta",
	"icon": "format-image",
	"description": "A block with media (Wistia video or image) and a content section.",
	"example": {
		"attributes": {
			"mediaType": "image",
			"mediaAlignment": "left"
		}
	},
	"textdomain": "one-novanta-theme",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"viewScript": "file:./view.js",
	"style": "file:./style-index.css",
	"render": "file:./render.php",
	"supports": {
		"align": ["full"],
		"inserter": false
	},
	"attributes": {
		"mediaType": {
			"type": "string",
			"default": "image"
		},
		"imageID": {
			"type": "number"
		},
		"mediaURL": {
			"type": "string",
			"default": ""
		},
		"mediaAlignment": {
			"type": "string",
			"default": "left"
		},
		"videoThumbnailID": {
			"type": "number"
		},
		"videoThumbnailURL": {
			"type": "string",
			"default": ""
		}
	}
}
