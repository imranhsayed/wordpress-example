{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "one-novanta/media-cover",
	"version": "0.1.0",
	"title": "Media Cover",
	"category": "one-novanta",
	"icon": "editor-table",
	"description": "A custom media-cover block.",
	"example": {
		"attributes": {
			"heading": "Heading",
			"description": "Description"
		}
	},
	"supports": {},
	"attributes" : {
		"heading": {
			"type": "string",
			"default": ""
		},
		"description": {
			"type": "string",
			"default": ""
		},
		"imageID": {
			"type": "integer",
			"default": 0
		},
		"imageURL": {
			"type": "string",
			"default": ""
		},
		"contentAlignment": {
			"type": "string",
			"default": "left"
		},
		"contentWidth": {
			"type": "string",
			"default": "wide"
		}
	},
	"textdomain": "one-novanta-theme",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"render": "file:./render.php"
}
